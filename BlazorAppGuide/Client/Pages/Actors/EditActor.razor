@page "/actor/edit"

<h3>Edit an Actor</h3>
<ActorAddEditForm Actor="Actor" OnValidSubmit="Edit"/>

@code {
    [Parameter]
    public int Id { get; set; }
    private ActorDto Actor;

    protected override void OnInitialized()
    {
        Actor = new ActorDto { FirstName = "Tom", LastName = "Holland", DateOfBirth = new DateTime(1985,10,12), YearsActive = 17 };
    }

    private void Edit()
    {
        Console.WriteLine($"New Actor information \nFirst Name: {Actor.FirstName} \nLast Name: {Actor.LastName}");
    }
}